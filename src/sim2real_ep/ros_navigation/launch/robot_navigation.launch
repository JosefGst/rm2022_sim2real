<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find carto_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- robot_description -->
  <include file="$(find ep_description)/launch/ep_description.launch"/>

  <!-- bringup -->
  <include file="$(find ep_bringup)/launch/bringup.launch"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- ekf -->
  <include file="$(find ep_bringup)/launch/ep_ekf.launch"/>

  <!-- AMCL -->
  <include file="$(find ros_navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find ros_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find carto_navigation)/rviz/navigation.rviz"/>
  </group>
</launch>
